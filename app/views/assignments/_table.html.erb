<div id="assignments" class="min-w-full">
  <div class=" rounded-xl overflow-auto">
    <table class="border-collapse table-auto w-full text-sm">
      <thead>
        <tr>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap">Employee</th>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap">Project</th>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap"></th>
        </tr>
      </thead>
      <% assignments.each do |assignment| %>
        <tr>
          <td class="border px-8 py-4 w-full whitespace-nowrap"><%= assignment.employee.name %></td>
          <td class="border px-8 py-4 whitespace-nowrap"><%= assignment.project.name %></td>
          <td class="border px-8 py-4 whitespace-nowrap">
            <%= link_to 'Show', assignment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
            <%= link_to 'Edit', edit_assignment_path(assignment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
