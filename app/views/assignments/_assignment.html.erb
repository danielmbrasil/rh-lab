<div id="<%= dom_id assignment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Employee:</strong>
    <%= assignment.employee.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= assignment.project.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Starts on:</strong>
    <%= assignment.starts_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ends on:</strong>
    <%= assignment.ends_on %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this assignment", assignment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this assignment', edit_assignment_path(assignment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
