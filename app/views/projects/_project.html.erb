<div id="<%= dom_id project %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= project.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Starts on:</strong>
    <%= project.starts_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ends on:</strong>
    <%= project.ends_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Budget:</strong>
    <%= project.budget %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Spent:</strong>
    <%= project.spent %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this project", project, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this project', edit_project_path(project), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
